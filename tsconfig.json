{
  "compilerOptions": {
    // "allowSyntheticDefaultImports": true,
    "allowJs": true, // 需要编译js文件
    "checkJs": false,  // 报告js文件错误
    "outDir": "./dist/",
    "sourceMap": false,
    "removeComments": true,
    // "moduleResolution": "node",
    "target": "es2017",
    "noImplicitAny": true, // 强类型检查，false会在无法判断类型时使用any替代
    "experimentalDecorators": true, // ?
    "lib": [
      "es6",
      "es7"
    ], // 添加需要解析的语法，否则TS会报错
    "module": "CommonJS" // 指定生成哪个模块的代码
    // "declaation": true, 
    // "declarationDir": "",
    // "baseUrl": "", ?
  },
  "includes": [
    "./externals.d.ts"
  ]
}